<?xml version="1.0"?>
<!DOCTYPE Configure PUBLIC "-//Mort Bay Consulting//DTD Configure//EN" "http://jetty.mortbay.org/configure.dtd">
<Configure class="org.eclipse.jetty.webapp.WebAppContext">
    <New id="pokerDS" class="org.eclipse.jetty.plus.jndi.Resource">
        <Arg>jdbc/myds</Arg>
        <Arg>
            <New class="com.mysql.jdbc.jdbc2.optional.MysqlConnectionPoolDataSource">
                <Set name="url">jdbc:mysql://localhost:3306/poker</Set>
                <Set name="user">poker</Set>
                <Set name="password">poker</Set>
            </New>
        </Arg>
        <Call name="bindToENC">
            <!-- binds jdbc/pokerDS to java:comp/env/jdbc/pokerDS for this webapp -->
            <Arg>jdbc/pokerDS</Arg>
        </Call>

        <Call name="bindToENC">
            <!-- WORKAROUND: CustomPersistenceUnitManager looks for jdbc/poker when
                 poker-admin is started with mvn jetty:run.
                 Final solution is to avoid usage of the "DS" suffix for jndi.
                 This would be additionally in-line with some default
                 behaviour (e.g. firebase datasource deployment). -->
            <!-- binds jdbc/pokerDS to java:comp/env/jdbc/poker for this webapp -->
            <Arg>jdbc/poker</Arg>
        </Call>
    </New>
</Configure>